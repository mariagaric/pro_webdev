<div>
    <div>
        <h1 style="margin: 20px;">My Projects</h1>
        <div class="columns col-gapless">
            {{#if dbError}}
                <div>
                    Sorry, there was a problem with the database:<br />
                    {{theError}}
                </div>
            {{else}}
                {{#each projects}}
                <section class="container" style="margin: 20px;"> 
                    <h3>{{projectTitle}}</h3>
                    <p> {{projectDesc}} </p>
                </section>
                {{/each}}
            {{/if}}
        </div>
    </div>
</div>
